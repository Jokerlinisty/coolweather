<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coolweather.app">

    <uses-permission android:name="android.permission.INTERNET" /> // 网络 操作权限
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ChooseAreaActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WeatherActivity"></activity> // 天气界面活动
        <service android:name=".activity.AutoUpdateService"/> // 自动更新天气服务
        <receiver android:name=".receiver.AutoUpdateReceiver"/> // 自动更新天气广播接收器
    </application>

</manifest>